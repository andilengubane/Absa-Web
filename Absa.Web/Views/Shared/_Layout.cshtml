<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Absa</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
	<script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/jquery-ui.js" type="text/javascript"></script>
	<link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/themes/blitzer/jquery-ui.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

	<script>
        $(function () {
            $("#dialogs").dialog({
                autoOpen: false,
                modal: true,
                title: "Over Rall Report",
                dialogClass: 'titleColor',
                width: 1200,
                height: 600
            });
            $("#overRall .ViewReport").click(function () {
                $.ajax({
                    type: "POST",
                    url: "/Report/OverRallReportView",
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (response) {
                        $('#dialogs').html(response);
                        $('#dialogs').dialog('open');
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        });
</script>

<style>
	.btn.btn-circle {
		 border-radius: 50px;
	}
	.titleColor .ui-dialog-titlebar { 
		background: #1C2833;
	}
</style>
</head>
<body>
	<div id="dialogs" style="display: none"></div>
	<nav class="navbar navbar-expand-lg navbar-light fixed-top nav-fill" style="background-color: #1C2833; height:60px;">
