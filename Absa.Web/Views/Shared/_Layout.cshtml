			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarTogglerDemo01">
			<a class="navbar-brand" href="#">
			</a>
			<a class="navbar-brand" href="#"></a>
			<ul class="navbar-nav mr-auto mt-2 mt-lg-0">
				<li class="nav-item active">
					<button class="btn btn-sm btn-circle btn-outline-secondarys" type="button" id="userList" onclick="location.href='@Url.Action("Index", "Home")'">DASHBORD</button>
				</li>
				<li class="nav-item active">
				</li>
				<li class="nav-item active">
					<a class="nav-link" href="#"><span class="sr-only">(current)</span></a>
				</li>
				<li class="nav-item active">
					<button class="btn btn-sm btn-circle btn-outline-secondary" type="button" id="userList" onclick="location.href='@Url.Action("ResiliencTrackList", "Home")'">RESILIENCE TRACK</button>
				</li>
				<li class="nav-item active">
					<a class="nav-link" href="#"><span class="sr-only">(current)</span></a>
				</li>
				<li class="nav-item active" id="overRall">
					<button class="ViewReport btn btn-sm btn-circle btn-outline-secondary" type="button" id="overRall" href="javascript:;">REPORT</button>
                <li class="nav-item active">
					<a class="nav-link" href="#"><span class="sr-only">(current)</span></a>
				</li>
				<li class="nav-item active">
					<button class="btn btn-sm btn-circle btn-outline-secondary" type="button" id="userList" onclick="location.href='@Url.Action("UserList", "Account")'">USERS</button>
			    </li>
			</ul>
			<form class="form-inline my-2 my-lg-0">
			</form>
			<button class="btn btn-circle btn-outline-primary my-2 my-sm-0" style='margin-Left:16px' onclick="location.href='@Url.Action("Login", "Account")'">LOGOUT</button>
      </div>
	</nav>
	<br />
    <div class="container-fluid body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Absa</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
