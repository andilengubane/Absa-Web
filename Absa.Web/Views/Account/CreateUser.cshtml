@model Absa.Web.Models.UserModel
@{
	ViewBag.Title = "CreateUser";
	Layout = null;

}
@section scripts{
<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>

}

<script type="text/javascript">
    $(function () {
        $("#butValidateForm").click(function (event) {

            var isValid = $('#myForm').valid();
            if(isValid)
            {
               //do something before submit the form
               $('#myForm').submit();
            }else{
               alert('validation failed');
            }
            event.preventDefault();
        })
    });
</script>
<style>
	.btn.btn-circle { border-radius: 50px; }
	.text-field { border-radius: 50px; }
</style>
<br>
@using (Html.BeginForm("AddUpdateUser", "Account", FormMethod.Post, new { id = "myForm" }))
{
	@Html.AntiForgeryToken()
	<form>
		    <div class="form-row">
		    	<div class="col">
		    		@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control text-field", placeholder = "First Name", autocomplete = "off" , required = "required" } })
		    		@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
		    	</div>
		    	<div class="col">
		    		@Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control text-field", placeholder = "Last Name", autocomplete = "off" , required = "required" } })
		    		@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
		    	</div>
		    </div>
		 <br>
		    <div class="form-row">
		    	<div class="col">
		    		@Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control text-field", placeholder = "Email Name", autocomplete = "off", required = "required" } })
		    		@Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
		    	</div>
		    	<div class="col">
		    		@Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control text-field", placeholder = "Contact Number", autocomplete = "off", required = "required" } })
		    		@Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
		    	</div>
		    </div>
		 <br>
			<div class="form-row">
				<div class="col">
				@Html.DropDownListFor(model => model.BusinessUnit, Model.BusinestUnitList, "Select Business Unit", new { @class = "form-control", required = "required" })
				</div>
				<div class="form-group col-md-6">
					@Html.DropDownListFor(model => model.RolesPermission, Model.RolesPermissionList, "Select  Role Permission", new { @class = "form-control" })
				</div>
			</div>
		 <br>
			<div class="form-group">
				<div class="form-check">
					<div class="checkbox">
						@Html.EditorFor(model => model.IsActive)
						@Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
						IsActive
					</div>
				</div>
			</div>
		<br>
		<div class="form-row">
			<div class="col">
				<input type="submit" value="Save" id="butValidateForm" class="btn btn-lg  btn-circle btn-outline-dark" />
			</div>
		</div>
	</form>
}
