@model IEnumerable<Absa.Web.Models.UserModel>

@{
	ViewBag.Title = "UserList";
}

@section scripts{
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/jquery-ui.js" type="text/javascript"></script>
<link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/themes/blitzer/jquery-ui.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
        $(function () {
            $("#dialog").dialog({
                autoOpen: false,
                modal: true,
                title: "User",
                width: 700,
                height: 450,
            });
            $("#UserList .details").click(function () {
                var customerId = $(this).closest("tr").find("td").eq(0).html();
                $.ajax({
                    type: "POST",
                    url: "/Account/CreateUser",
                    data: '{customerId: "' + customerId + '" }',
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (response) {
                        $('#dialog').html(response);
                        $('#dialog').dialog('open');
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        });
</script>

<script type="text/javascript">
        $(function () {
            $("#dialogs").dialog({
                autoOpen: false,
                modal: true,
                title: "User",
                width: 700,
                height: 450,
            });
            $("#UserList .EditUser").click(function () {
            	var id = $(this).closest('tr').find('td:eq(0)').text();
                $.ajax({
                    type: "POST",
                    url: "/Account/EditUser",
                    data: '{userID: "' + id + '" }',
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (response) {
                        $('#dialogs').html(response);
                        $('#dialogs').dialog('open');
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        });
</script>
<script type="text/javascript">
        $(function () {
            $("#dialogss").dialog({
                autoOpen: false,
                modal: true,
                title: "User",
                width: 600,
                height: 250,
            });
            $("#UserList .DeleteUser").click(function () {
            	var id = $(this).closest('tr').find('td:eq(0)').text();
                $.ajax({
                    type: "POST",
                    url: "/Account/DeleteUser",
                    data: '{userID: "' + id + '" }',
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (response) {
                        $('#dialogss').html(response);
                        $('#dialogss').dialog('open');
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        });
</script>
	
}

<style>
 .col1 {
		 display: none;
	}
  .col2 { 
		display: none; 
    }
</style>
<div id="dialog" style="display: none"></div>
<div id="dialogs" style="display: none"></div>
<div id="dialogss" style="display: none"></div>
	<h3 class="modal-title" id="myModalLabel">Users</h3>
	<br>
<font size="2">
	<table class="table table-bordered" id="UserList">
		<tr>
			<th class="col1">

			</th>
			<th>
				First Name
			</th>
			<th>
				Last Name
			</th>
			<th>
				Email Address
			</th>
			<th>
				Contact Number
			</th>
			<th>
				IsActive
			</th>
			<th>
				Business Unit
			</th>
			<th>
				Role
			</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td class="col1">
					@Html.DisplayFor(modelItem => item.ID, new { id = "userID" })
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EmailAddress)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ContactNumber)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsActive)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BusinessUnit)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RolesPermission)
				</td>
				<td>
					<button class="details btn btn-sm btn-success" type="button" id="userList" href="javascript:;">CREATE</button>
					<button class="EditUser btn btn-sm btn-primary" type="button" id="userList" href="javascript:;">MODIFY</button>
					<button class="DeleteUser btn-sm btn-danger" type="button" id="userList" href="javascript:;">DELETE</button>
				</td>
			</tr>
		}
	</table>
</font>