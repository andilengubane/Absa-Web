
@{
	Layout = null;
}

<script src="~/Scripts/chart/highcharts.js"></script>
<script src="~/Scripts/chart/exporting.js"></script>
<div>
	<div class="card">
		<div class="card-body">
			<div id="container" style="min-width: 500px; height: 400px; max-width: 600px; margin: 0 auto"></div>
		</div>
	</div>
</div>
<script>
	$(document).ready(function () {
		$.getJSON("/DashBord/GetDisasterRecoverData", function (data) {
			Highcharts.chart('container', {
				chart: {
					plotBackgroundColor: null,
					plotBorderWidth: null,
					plotShadow: false,
					type: 'pie'
				},
				title: {
					text: 'Disaster Recover Data'
				},
				tooltip: {
					pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
				},
				plotOptions: {
					pie: {
						allowPointSelect: true,
						cursor: 'pointer',
						dataLabels: {
							enabled: true,
							format: '<b>{point.name}</b>: {point.percentage:.1f} %',
							style: {
								color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
							}
						}
					}
				},
				series: [{
					//name: 'Brands',
					colorByPoint: true,
					data: [{
						name: 'Yes',
						y: data.DisasterRecoveryYes,
						color: '#008000',
					}, {
						name: 'No',
						y: data.DisasterRecoveryNo,
						color: '#FF0000'
					}, {
						name: 'Warnings',
						y: data.DisasterRecoveryWarning,
						color: '#FFE334'
					}]
				}]
			});
		});
	});
</script>
