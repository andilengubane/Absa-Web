@model Absa.Web.Models.ApplicationModel

@{
	ViewBag.Title = "Decline";
	Layout = null;
}
<script src="~/Scripts/jquery.validate.js"></script>
<style>
	.col1 {
		display: none;
	}

	.col2 {
		display: none;
	}

	div.light {
		width: 50px;
		height: 50px;
		background-color: green;
	}

	.btn.btn-circle {
		border-radius: 50px;
	}

	.text-field {
		border-radius: 50px;
	}

	.titleColor .ui-dialog-titlebar {
		background: #1C2833;
	}
</style>

@using (Html.BeginForm("DeclineRequest", "Home", FormMethod.Post, new { id = "formDecline" }))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(model => model.Email)
	@Html.HiddenFor(model => model.ResilienceID)

	<form>
		<div class="row">
			<div class="col">
				@Html.EditorFor(model => model.BusinessUnit, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="col">
				@Html.EditorFor(model => model.ApplicationId, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col">
				@Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="col">
				@Html.DropDownListFor(model => model.BusinessUnitName, Model.ApplicationDeclined, "Strategic Fit", new { @class = "form-control" })
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col">
				@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", id = "description", required = "required" } })
			</div>
			<div class="col">
			</div>
		</div>
		<br>
		<div class="form-group">
			<div class="col-md-offset-2 col">
				<input type="submit" value="Create" class="btn btn-sm btn-circle btn-outline-dark" />
			</div>
		</div>
	</form>
}